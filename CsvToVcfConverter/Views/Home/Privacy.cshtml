@{
    ViewData["Title"] = "Privacy Policy & Security - CSV to VCF Converter";
    ViewData["Description"] = "Your privacy is protected with our zero-storage CSV to VCF converter. Learn about our security measures and privacy-first approach to contact file conversion.";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Hero Section -->
        <div class="text-center mb-5">
            <i class="bi bi-shield-lock display-1 text-success mb-3"></i>
            <h1 class="display-4 fw-bold text-primary">Your Privacy is Our Priority</h1>
            <p class="lead text-muted">
                We are committed to protecting your data with zero-storage, client-side processing technology.
            </p>
        </div>

        <!-- Key Highlights -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-success h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-server text-success display-4 mb-3"></i>
                        <h5 class="card-title text-success">No Server Storage</h5>
                        <p class="card-text">Your files never touch our servers. Everything is processed locally in your browser.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-eye-slash text-info display-4 mb-3"></i>
                        <h5 class="card-title text-info">No Tracking</h5>
                        <p class="card-text">We don't use cookies, analytics, or any tracking mechanisms to monitor your activity.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning h-100">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-clock-history text-warning display-4 mb-3"></i>
                        <h5 class="card-title text-warning">Temporary Processing</h5>
                        <p class="card-text">Files are processed temporarily and immediately deleted after conversion.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Privacy Policy -->
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white py-3">
                <h2 class="card-title mb-0">
                    <i class="bi bi-file-text me-2"></i>Privacy Policy & Data Protection
                </h2>
            </div>
            <div class="card-body p-4">
                
                <!-- Data Collection -->
                <div class="mb-4">
                    <h4 class="text-primary mb-3"><i class="bi bi-database me-2"></i>Data Collection</h4>
                    <div class="alert alert-success border-0">
                        <h6 class="alert-heading">We collect ZERO personal data</h6>
                        <ul class="mb-0">
                            <li>No files are stored on our servers</li>
                            <li>No personal information is collected</li>
                            <li>No user accounts or registration required</li>
                            <li>No IP addresses or usage logs are maintained</li>
                        </ul>
                    </div>
                </div>

                <!-- How It Works -->
                <div class="mb-4">
                    <h4 class="text-primary mb-3"><i class="bi bi-gear me-2"></i>How Our Technology Works</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <h6 class="card-title text-success"><i class="bi bi-upload me-1"></i>File Upload</h6>
                                    <p class="card-text small">When you upload a file, it's temporarily stored in your browser's memory only.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <h6 class="card-title text-info"><i class="bi bi-cpu me-1"></i>Processing</h6>
                                    <p class="card-text small">All conversion happens in your browser using JavaScript - no server involvement.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Security Measures -->
                <div class="mb-4">
                    <h4 class="text-primary mb-3"><i class="bi bi-shield-check me-2"></i>Security Measures</h4>
                    <div class="row g-3">
                        <div class="col-lg-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-lock text-success me-3 mt-1"></i>
                                <div>
                                    <h6 class="fw-bold mb-1">HTTPS Encryption</h6>
                                    <p class="text-muted small mb-0">All communication is encrypted using industry-standard SSL/TLS.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-trash text-danger me-3 mt-1"></i>
                                <div>
                                    <h6 class="fw-bold mb-1">Auto Deletion</h6>
                                    <p class="text-muted small mb-0">Temporary files are automatically deleted immediately after processing.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-browser-chrome text-primary me-3 mt-1"></i>
                                <div>
                                    <h6 class="fw-bold mb-1">Browser-Only Processing</h6>
                                    <p class="text-muted small mb-0">All operations happen locally in your browser's secure environment.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-ban text-warning me-3 mt-1"></i>
                                <div>
                                    <h6 class="fw-bold mb-1">No Third-Party Access</h6>
                                    <p class="text-muted small mb-0">Your data never leaves your device or goes to any third-party services.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Rights -->
                <div class="mb-4">
                    <h4 class="text-primary mb-3"><i class="bi bi-person-check me-2"></i>Your Rights</h4>
                    <div class="alert alert-info border-0">
                        <p class="mb-2">Since we don't collect or store any data, you automatically have:</p>
                        <ul class="mb-0">
                            <li><strong>Complete Control:</strong> Your files remain entirely under your control</li>
                            <li><strong>No Data Retention:</strong> Nothing to delete because nothing is stored</li>
                            <li><strong>Full Transparency:</strong> Open-source technology that you can inspect</li>
                            <li><strong>Immediate Deletion:</strong> Files are automatically removed after processing</li>
                        </ul>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="mb-4">
                    <h4 class="text-primary mb-3"><i class="bi bi-envelope me-2"></i>Questions or Concerns</h4>
                    <p>If you have any questions about our privacy practices or security measures, please don't hesitate to reach out:</p>
                    <div class="alert alert-light border">
                        <p class="mb-2"><strong>Privacy Commitment:</strong></p>
                        <p class="mb-0 small text-muted">
                            We believe privacy is a fundamental right. This tool was specifically designed to give you complete control 
                            over your data while providing a useful service. Your trust is important to us, and we've built this 
                            application to deserve it.
                        </p>
                    </div>
                </div>

                <!-- Last Updated -->
                <div class="border-top pt-3 mt-4">
                    <p class="text-muted small mb-0">
                        <strong>Last Updated:</strong> @DateTime.Now.ToString("MMMM dd, yyyy") | 
                        <strong>Effective Date:</strong> @DateTime.Now.ToString("MMMM dd, yyyy")
                    </p>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white py-3">
                <h2 class="card-title mb-0">
                    <i class="bi bi-chat-dots me-2"></i>Questions About Privacy?
                </h2>
            </div>
            <div class="card-body p-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="fw-bold mb-3">Contact the Developer</h5>
                        <p class="mb-3">
                            If you have any questions about our privacy practices, data handling, or security measures, 
                            please don't hesitate to reach out to the developer directly.
                        </p>
                        <div class="d-flex align-items-center gap-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-circle text-primary me-2 fs-5"></i>
                                <span class="fw-bold">Mustafa Khan</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-envelope text-success me-2"></i>
                                <a href="mailto:khanmustafa057@gmail.com" class="text-decoration-none">
                                    khanmustafa057@gmail.com
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="bg-light rounded-3 p-3">
                            <i class="bi bi-shield-check display-4 text-success mb-2"></i>
                            <h6 class="fw-bold text-primary">Transparency First</h6>
                            <small class="text-muted">
                                Open communication about privacy and security
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
