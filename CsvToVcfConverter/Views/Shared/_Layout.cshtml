<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Free CSV to VCF Converter | Convert Excel & CSV to vCard Online</title>
    
    <!-- Primary SEO Meta Tags -->
    <meta name="title" content="Free CSV to VCF Converter | Convert Excel & CSV to vCard Online - Privacy First">
    <meta name="description" content="Convert CSV and Excel files to VCF (vCard) format instantly. Free, secure, privacy-first converter with no data storage. Works with any column format. 100% browser-based processing.">
    <meta name="keywords" content="CSV to VCF converter, Excel to VCF, vCard converter, contact converter, CSV to vCard, Excel to vCard, free converter, privacy safe converter, contact file converter, import contacts">
    <meta name="robots" content="index, follow">
    <meta name="language" content="English">
    <meta name="author" content="CSV to VCF Converter">
    <meta name="revisit-after" content="7 days">
    <meta name="distribution" content="global">
    <meta name="rating" content="general">
    <meta name="theme-color" content="#0d6efd">
    
    <!-- Additional Technical Meta Tags -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="format-detection" content="telephone=no">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="msapplication-TileColor" content="#0d6efd">
    
    <!-- Performance and Caching -->
    <meta http-equiv="Cache-Control" content="public, max-age=86400">
    <meta name="referrer" content="origin-when-cross-origin">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://csvtovcf.com/">
    <meta property="og:title" content="Free CSV to VCF Converter - Convert Excel & CSV to vCard Online">
    <meta property="og:description" content="Convert CSV and Excel files to VCF (vCard) format instantly. Free, secure, privacy-first converter with no data storage. Works with any column format.">
    <meta property="og:image" content="https://csvtovcf.com/images/converter-preview.png">
    <meta property="og:site_name" content="CSV to VCF Converter">
    <meta property="og:locale" content="en_US">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://csvtovcf.com/">
    <meta property="twitter:title" content="Free CSV to VCF Converter - Convert Excel & CSV to vCard Online">
    <meta property="twitter:description" content="Convert CSV and Excel files to VCF (vCard) format instantly. Free, secure, privacy-first converter with no data storage.">
    <meta property="twitter:image" content="https://csvtovcf.com/images/converter-preview.png">
    
    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#6366f1">
    <meta name="msapplication-TileColor" content="#6366f1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="CSV to VCF Converter">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://csvtovcf.com@(ViewContext.HttpContext.Request.Path)">
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    
    <!-- Preconnect to improve performance -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CsvToVcfConverter.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Structured Data JSON-LD -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "WebApplication",
        "name": "CSV to VCF Converter",
        "description": "Free online tool to convert CSV and Excel files to VCF (vCard) format. Privacy-first, secure, no data storage.",
        "url": "https://csvtovcf.com",
        "applicationCategory": "UtilityApplication",
        "operatingSystem": "Any",
        "permissions": "browser",
        "offers": {
            "@@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
        },
        "creator": {
            "@@type": "Person",
            "name": "Mustafa Khan",
            "email": "khanmustafa057@gmail.com"
        },
        "featureList": [
            "Convert CSV to VCF",
            "Convert Excel to VCF", 
            "Privacy-first processing",
            "No data storage",
            "Free to use",
            "Works offline",
            "Multiple file formats"
        ]
    }
    </script>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-light-custom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-file-earmark-arrow-up me-2 text-primary"></i>CSV to VCF Converter
                </a>
                <button class="navbar-toggler border-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon-dark"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Privacy & Security
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i>About
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Security Notice Banner -->
    <div class="bg-success text-white py-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <small><i class="bi bi-shield-check me-1"></i><strong>Your Privacy is Protected:</strong> No data is stored on our servers. Files are processed temporarily and immediately deleted.</small>
                </div>
                <div class="col-md-4 text-end">
                    <small><i class="bi bi-cpu me-1"></i>100% Client-Side Processing</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Breadcrumb Navigation -->
    @if (ViewBag.ShowBreadcrumb != false)
    {
        <nav aria-label="breadcrumb" class="bg-light border-bottom">
            <div class="container">
                <ol class="breadcrumb py-2 mb-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                            <i class="bi bi-house me-1"></i>Home
                        </a>
                    </li>
                    @if (!string.Equals(ViewData["Title"]?.ToString(), "CSV to VCF Converter", StringComparison.Ordinal))
                    {
                        <li class="breadcrumb-item active" aria-current="page">
                            @ViewData["Title"]
                        </li>
                    }
                </ol>
            </div>
        </nav>
    }

    <main class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="fw-bold mb-3"><i class="bi bi-file-earmark-arrow-up me-2"></i>CSV to VCF Converter</h6>
                    <p class="mb-2">Convert your contact files quickly and securely.</p>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-shield-lock me-1"></i>
                        Your data never leaves your browser. Processing is done locally for maximum privacy.
                    </p>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-light text-decoration-none"><i class="bi bi-house me-1"></i>Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("Privacy", "Home")" class="text-light text-decoration-none"><i class="bi bi-shield-check me-1"></i>Privacy Policy</a></li>
                        <li class="mb-2"><a href="@Url.Action("About", "Home")" class="text-light text-decoration-none"><i class="bi bi-info-circle me-1"></i>About Us</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Features</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><small><i class="bi bi-file-excel me-1 text-success"></i>Excel Support</small></li>
                        <li class="mb-2"><small><i class="bi bi-filetype-csv me-1 text-info"></i>CSV Support</small></li>
                        <li class="mb-2"><small><i class="bi bi-gear me-1 text-warning"></i>Dynamic Columns</small></li>
                        <li class="mb-2"><small><i class="bi bi-shield-check me-1 text-success"></i>Privacy First</small></li>
                    </ul>
                </div>
            </div>
            <hr class="my-3 border-secondary">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted small">
                        &copy; @DateTime.Now.Year CSV to VCF Converter. All rights reserved. 
                        <span class="text-success">No data collection • No tracking • Privacy first</span>
                    </p>
                </div>
                <div class="col-md-3 text-center">
                    <small class="text-muted">
                        <i class="bi bi-person-circle me-1"></i>Developer: 
                        <a href="mailto:khanmustafa057@gmail.com" class="text-decoration-none text-primary">Mustafa Khan</a>
                    </small>
                </div>
                <div class="col-md-3 text-end">
                    <small class="text-muted">Made with <i class="bi bi-heart-fill text-danger"></i> for Privacy</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
