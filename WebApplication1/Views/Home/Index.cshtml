@{
    ViewData["Title"] = "CSV/Excel to VCF Converter";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center mb-0">CSV/Excel to VCF Contact Converter</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        Upload a CSV or Excel file containing contact information to convert it to VCF format. 
                        After uploading, you'll be able to select which columns contain the name and phone number data.
                    </p>

                    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label">Select CSV or Excel File</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".csv,.xlsx,.xls" required>
                            <div class="form-text">Accepted formats: CSV (.csv), Excel (.xlsx, .xls)</div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-upload"></i> Upload & Select Columns
                            </button>
                        </div>
                    </form>

                    <div class="mt-4">
                        <h5>File Format Requirements:</h5>
                        <ul class="list-unstyled">
                            <li><strong>Name column:</strong> "Formatted Name" (or "Name", "Full Name", "Contact Name" - case insensitive)</li>
                            <li><strong>Phone column:</strong> "WhatsApp No." (or "Phone", "Phone Number", "Contact Number", "Mobile", "Cell" - case insensitive)</li>
                        </ul>
                        
                        <h6 class="mt-3">Example Excel/CSV format (your format):</h6>
                        <div class="bg-light p-3 rounded">
                            <code>
                                Timestamp | Name | Age | WhatsApp No. | Gender | Location | Formatted Name<br>
                                2024-01-01 | John | 30 | +1234567890 | Male | NYC | John Doe<br>
                                2024-01-02 | Jane | 25 | +0987654321 | Female | LA | Jane Smith
                            </code>
                        </div>
                        
                        <h6 class="mt-3">Alternative simple format:</h6>
                        <div class="bg-light p-3 rounded">
                            <code>
                                Formatted Name | WhatsApp No.<br>
                                John Doe | +1234567890<br>
                                Jane Smith | +0987654321
                            </code>
                        </div>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Note:</strong> For Excel files, data should be in the first worksheet. The application will automatically detect the correct columns regardless of their position.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
